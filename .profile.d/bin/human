#!/bin/sh
# human [options]
#
# syntactic sugary, see _human
#
# OPTIONS
#	-d [delimeter]
#		field delimeter
#
#	-f [field]
#		field to convert
#
#	-B
#		block size (see du)
#

addopt() {
	AWK_OPTS="$AWK_OPTS $@"
}

while getopts "d:f:B:" opt
do
	case "$opt" in
		d)
			addopt -F"$OPTARG"
			;;
		f)
			addopt -v field="$OPTARG"
			;;
		B)
			addopt -v blocksize="$OPTARG"
			;;
	esac
done

awk $AWK_OPTS -f $(which _human)
