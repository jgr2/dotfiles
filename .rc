# vim: set ft=sh:

cd $HOME

### Exports

export PATH="$PATH:/bin:/usr/bin:/usr/local/bin"
export PS1="\e[1;31m[\\w]\\$\e[m "

### Aliases

alias ls="ls --color=auto -Fhal"

alias mv="mv -v"
alias cp="cp -v"
alias rm="rm -v"

alias chmod="chmod -v"
alias chown="chown -v"

alias cu="cp -u"

alias gdb="gdb -q"

### Functions

cl () {
	cd $1 && ls
}

append () {
	cat ->> $1 
}

sprunge () {
	# TODO: only add parameters if they're set
	url='$(curl -F 'sprunge=<-' http://sprung.us | tr -d '\n')'
	echo $url?$1#n-$2
}

world () {
	printf "Brisbane: %-150s\n" "$(date)" && 
	printf "London: %.20s\n" "$(TZ='Europe/London' date)" && 
	echo -n "Los Angeles: " && TZ='America/Los_Angeles' date &&
	echo -n "New York: " && TZ="America/New_York" date
}
