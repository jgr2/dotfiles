# vim: set ft=sh:
cd $HOME

### Exports

export PATH="$PATH:/bin:/usr/bin:/usr/local/bin"
export PS1="\e[1;31m[\\w]\\$\e[m "

### Aliases

alias mv="mv -v"
alias cp="cp -v"
alias rm="rm -v"

alias cu="cp -u"

alias chmod="chmod -v"
alias chown="chown -v"

alias ls="ls --color=auto -Fhal"

